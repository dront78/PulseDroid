<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:id="@+id/LinearLayoutServer">
		<TextView android:layout_height="wrap_content" android:text="Server"
			android:layout_width="fill_parent" android:layout_weight="0.7"
			android:id="@+id/TextViewServer"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="0.3"
			android:id="@+id/EditTextServer" android:saveEnabled="true"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/LinearLayoutPort">
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="0.7"
			android:text="Port" android:id="@+id/TextViewPort"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="0.3"
			android:id="@+id/EditTextPort" android:saveEnabled="true"
			android:typeface="normal"></EditText>
	</LinearLayout>
	<Button android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_gravity="bottom"
		android:text="Play!" android:id="@+id/ButtonPlay"></Button>
	<Button android:layout_height="wrap_content" android:text="Exit"
		android:layout_width="fill_parent" android:id="@+id/ButtonExit"></Button>
</LinearLayout>
